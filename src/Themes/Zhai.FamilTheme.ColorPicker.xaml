            <ControlTemplate TargetType="{x:Type local:ColorPicker}">
                <StackPanel>
                    <DockPanel x:Name="PART_HSV_H" Style="{StaticResource Zhai.FamilTheme.ColorPicker.ColorSliderContainer}" ToolTip="{local:Translator ColorPicker.HSV.H.Text}">
                        <TextBlock DockPanel.Dock="Left" Style="{StaticResource Zhai.FamilTheme.ColorPicker.ColorPropertyNameText}" Text="{local:Translator ColorPicker.HSV.H.Text}"/>
                        <TextBlock DockPanel.Dock="Right" Style="{StaticResource Zhai.FamilTheme.ColorPicker.ColorPropertyValueText}" Text="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=HSV_H}"/>
                        <local:ColorSliderHSV Kind="H" Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=HSV_H}" Style="{StaticResource Zhai.FamilTheme.ColorSlider}"/>
                    </DockPanel>
                    <DockPanel x:Name="PART_RGB_A" Style="{StaticResource Zhai.FamilTheme.ColorPicker.ColorSliderContainer}" ToolTip="{local:Translator ColorPicker.RGB.A.Text}" Visibility="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=IsAlphaEnabled, Converter={Converters:BoolToVisibilityConverter}}">
                        <TextBlock DockPanel.Dock="Left" Style="{StaticResource Zhai.FamilTheme.ColorPicker.ColorPropertyNameText}" Text="{local:Translator ColorPicker.RGB.A.Text}"/>
                        <TextBlock DockPanel.Dock="Right" Style="{StaticResource Zhai.FamilTheme.ColorPicker.ColorPropertyValueText}" Text="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=A}"/>
                        <local:ColorSliderRGB Kind="A" Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=A}" Style="{StaticResource Zhai.FamilTheme.ColorSlider}"/>
                    </DockPanel>
                </StackPanel>
                <ControlTemplate.Triggers>
                    <Trigger Property="Kind" Value="Normal">
                        <Setter Property="HSV_S" Value="100"/>
                        <Setter Property="HSV_V" Value="100"/>
                        <Setter Property="IsColorPropertyNameVisibled" Value="False"/>
                        <Setter Property="IsColorPropertyValueVisibled" Value="False"/>
                    </Trigger>
                </ControlTemplate.Triggers>
            </ControlTemplate>
        </Converters:ColorPickerTemplateConverter.NormalTemplate>
