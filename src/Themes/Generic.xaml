    <Style TargetType="{x:Type local:IconToggleButton}" BasedOn="{StaticResource Zhai.FamilTheme.IconToggleButton}"/>
    <Style TargetType="{x:Type local:LinkButton}" BasedOn="{StaticResource Zhai.FamilTheme.LinkButton}"/>
