        <Setter Property="ContextMenu" Value="{StaticResource Zhai.FamilTheme.DefaultContextMenu}"/>
    </Style>
    <Style TargetType="{x:Type local:CopyButton}" BasedOn="{StaticResource Zhai.FamilTheme.CopyButton}"/>
    <Style TargetType="{x:Type local:DatePicker}" BasedOn="{StaticResource Zhai.FamilTheme.DatePicker}">
