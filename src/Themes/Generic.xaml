    <Style TargetType="{x:Type local:SwitchToggleButton}" BasedOn="{StaticResource Zhai.FamilTheme.SwitchToggleButton}"/>
    <Style TargetType="{x:Type local:TabItem}" BasedOn="{StaticResource Zhai.FamilTheme.TabItem}"/>
    <Style TargetType="{x:Type local:TabPanel}" BasedOn="{StaticResource Zhai.FamilTheme.TabPanel}"/>
    <Style TargetType="{x:Type local:TextBox}" BasedOn="{StaticResource Zhai.FamilTheme.TextBox}">
        <Setter Property="ContextMenu" Value="{StaticResource Zhai.FamilTheme.DefaultContextMenu}"/>
