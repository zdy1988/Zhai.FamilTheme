<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Zhai.FamilyContorls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Zhai.FamilyContorls;component/Themes/Zhai.FamilyContorls.IconButton.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type local:CopyButton}" x:Key="Zhai.FamilyContorls.CopyButton" BasedOn="{StaticResource Zhai.FamilyContorls.IconButton}">
        <Setter Property="Icon" Value="DocumentCopy"/>
    </Style>

    <Style TargetType="{x:Type local:CopyButton}" BasedOn="{StaticResource Zhai.FamilyContorls.CopyButton}"/>

</ResourceDictionary>