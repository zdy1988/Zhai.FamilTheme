<ZDY:TransparentWindow x:Class="Zhai.FamilyContorlsDemo.MainWindow"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:local="clr-namespace:Zhai.FamilyContorlsDemo"
                       xmlns:ZDY="http://www.zdyla.com/coding"
                       WindowStartupLocation="CenterScreen"
                       IsTopmostButtonEnabled="True"
                       IsThemeButtonEnabled="True"
                       IsTransparencyButtonEnabled="True"
                       IsTransparency="True"
                       Theme="Light"
                       Icon="/favicon.ico"
                       mc:Ignorable="d"
                       Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ZDY:ScrollViewer Visibility="Visible">
            <StackPanel>
                <ListBox x:Name="IconList" Background="Transparent" BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Foreground="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Foreground}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Width="50" Height="50">
                                <ZDY:Icon Kind="{Binding }" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>

                <ZDY:IconButton Icon="About" Background="#70000000" HorizontalAlignment="Left"/>

                <ZDY:IconButton Icon="About" Background="#70000000" Width="50" Height="50" IconSize="32" HorizontalAlignment="Left"/>

                <ZDY:IconToggleButton Icon="ArrowLeft" CheckedIcon="ArrowRight" ToolTip="向左" CheckedToolTip="向右" Background="#70000000" HorizontalAlignment="Left"/>
            </StackPanel>
        </ZDY:ScrollViewer>

        <ZDY:ScrollViewer HorizontalScrollBarVisibility="Visible" Margin="20" Visibility="Collapsed">
            <Border Width="1000" Height="1000">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#A770EF"  Offset="0"/>
                        <GradientStop Color="#CF8BF3"  Offset=".5"/>
                        <GradientStop Color="#FDB99B"  Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
        </ZDY:ScrollViewer>
    </Grid>
</ZDY:TransparentWindow>
