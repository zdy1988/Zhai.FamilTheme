<UserControl x:Class="Zhai.FamilThemeDemo.MainWindowContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Zhai.FamilThemeDemo"
             xmlns:ZDY="http://www.zdyla.com/coding"
             ZDY:Translator.ResourceDictionary="Zhai.FamilThemeDemo.Lang"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary Source="pack://application:,,,/Zhai.FamilTheme;component/Themes/Zhai.FamilTheme.Brushes.xaml" />
    </UserControl.Resources>

    <Grid>
        <Grid.Resources>
            <ExponentialEase x:Key="ExpEase" EasingMode="EaseOut" Exponent="5" />
        </Grid.Resources>
        
        <ZDY:TabPanel TabStripPlacement="Left">
            <ZDY:TabItem Header="Loc">
                <Grid>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                        <TextBlock Text="{ZDY:Translator HelloWorld}" Margin="5" FontSize="16"
                                   ZDY:Animate.Translate="{ZDY:AnimateTranslateParameter AutoReverse=True, RepeatBehavior={x:Static RepeatBehavior.Forever}, BeginTime=0, From='15,0', To='0,0', Duration=350, Ease={StaticResource ExpEase}, TransitionOn=Loaded}"/>

                        <TextBlock Text="{ZDY:Translator HelloWorld}" Margin="5" FontSize="16"
                                   ZDY:Animate.Translate="{ZDY:AnimateTranslateParameter AutoReverse=True, RepeatBehavior=0:00:5, BeginTime=0, From='18,0', To='0,0', Duration=350, Ease={StaticResource ExpEase}, TransitionOn=Loaded}"/>

                        <TextBlock Text="{ZDY:Translator HelloWorld}" Margin="5" FontSize="16"
                                   ZDY:Animate.Opacity="{ZDY:AnimateOpacityParameter BeginTime=250, From=0, To=1, Duration=1000, Ease={StaticResource ExpEase}, TransitionOn=Loaded}"/>

                        <TextBlock Text="{ZDY:Translator HelloWorld}" Margin="5" FontSize="16"
                                   ZDY:Animate.Opacity="{ZDY:AnimateOpacityParameter BeginTime=300, From=0, To=1, Duration=100, Ease={StaticResource ExpEase}, TransitionOn=Loaded}"
                                   ZDY:Animate.Blur="{ZDY:AnimateBlurParameter From='20', To='0', BeginTime=300, Duration=350, TransitionOn=Loaded}"/>

                        <TextBlock Text="{ZDY:Translator HelloWorld}" Margin="5" FontSize="16"
                                   ZDY:Animate.Opacity="{ZDY:AnimateOpacityParameter BeginTime=350, To=1, Duration=350, Ease={StaticResource ExpEase}, TransitionOn=Loaded}"                                    
                                   ZDY:Animate.Translate="{ZDY:AnimateTranslateParameter BeginTime=350, To='0,0', From='100,0', Duration=350, Ease={StaticResource ExpEase}, TransitionOn=Loaded}"/>

                        <TextBlock Text="{ZDY:Translator HelloWorld}" Margin="5" FontSize="16"
                                   ZDY:Animate.Opacity="{ZDY:AnimateOpacityParameter BeginTime=400, To=1, Duration=350, Ease={StaticResource ExpEase}, TransitionOn=Loaded}"                                    
                                   ZDY:Animate.LayoutScale="{ZDY:AnimateScaleParameter BeginTime=400, To='1,1', From='0.1,0.1', Duration=350, Ease={StaticResource ExpEase}, TransitionOn=Loaded}"/>

                    </StackPanel>
                </Grid>
            </ZDY:TabItem>
            <ZDY:TabItem Header="Animate">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Bottom" Margin="20" Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="显示动画  "/>
                        <ZDY:SwitchToggleButton IsChecked="{Binding IsShowAnimate}"/>
                    </StackPanel>
                    <UniformGrid Rows="2" Columns="4" Margin="20">
                        <UniformGrid.Resources>

                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="FontSize" Value="20"/>
                                <Setter Property="Background" Value="#66666666"/>
                                <Setter Property="TextWrapping" Value="Wrap"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                                <Setter Property="Margin" Value="5"/>
                            </Style>

                        </UniformGrid.Resources>

                        <TextBlock Text="Opacity on Visibility Changed" 
                                            ZDY:Animate.Opacity="{ZDY:AnimateOpacityParameter BeginTime=0, To=1, Duration=350, Ease={StaticResource ExpEase}, TransitionOn=Visibility}"                                     
                                            ZDY:Animate.Visibility="{Binding Path=IsShowAnimate, Mode=TwoWay, Converter={ZDY:BoolToVisibilityConverter}, ConverterParameter=Hidden}"/>

                        <TextBlock Text="Blur on Visibility Changed" 
                                            ZDY:Animate.Opacity="{ZDY:AnimateOpacityParameter BeginTime=0, To=1, Duration=450, Ease={StaticResource ExpEase}, TransitionOn=Visibility}"                                     
                                            ZDY:Animate.Blur="{ZDY:AnimateBlurParameter From='20', To='0', BeginTime=300, Duration=350, TransitionOn=Visibility}"              
                                            ZDY:Animate.Visibility="{Binding Path=IsShowAnimate, Mode=TwoWay, Converter={ZDY:BoolToVisibilityConverter}, ConverterParameter=Hidden}"/>

                        <TextBlock Text="Translate and Opacity on Visibility Changed" 
                                            ZDY:Animate.Opacity="{ZDY:AnimateOpacityParameter BeginTime=350, To=1, Duration=550, Ease={StaticResource ExpEase}, TransitionOn=Visibility}"                                     
                                            ZDY:Animate.Translate="{ZDY:AnimateTranslateParameter BeginTime=350, To='0,0', From='100,0', Duration=350, Ease={StaticResource ExpEase}, TransitionOn=Visibility}"                                     
                                            ZDY:Animate.Visibility="{Binding Path=IsShowAnimate, Mode=TwoWay, Converter={ZDY:BoolToVisibilityConverter}, ConverterParameter=Hidden}"/>

                        <TextBlock Text="Scale and Opacity on Visibility Changed" 
                                            ZDY:Animate.Opacity="{ZDY:AnimateOpacityParameter BeginTime=400, To=1, Duration=650, Ease={StaticResource ExpEase}, TransitionOn=Visibility}"                                     
                                            ZDY:Animate.LayoutScale="{ZDY:AnimateScaleParameter BeginTime=400, To='1,1', From='0.1,0.1', Duration=350, Ease={StaticResource ExpEase}, TransitionOn=Visibility}"                                     
                                            ZDY:Animate.Visibility="{Binding Path=IsShowAnimate, Mode=TwoWay, Converter={ZDY:BoolToVisibilityConverter}, ConverterParameter=Hidden}"/>



                        <TextBlock Text="Opacity on Visibility Changed" 
                                            ZDY:Animate.Opacity="{ZDY:AnimateOpacityParameter BeginTime=0, To=1, Duration=350, Ease={StaticResource ExpEase}, TransitionOn=Visibility}"                                     
                                            ZDY:Animate.Visibility="{Binding Path=IsShowAnimate, Mode=TwoWay, Converter={ZDY:BoolToVisibilityConverter}}"/>

                        <TextBlock Text="Blur on Visibility Changed" 
                                            ZDY:Animate.Opacity="{ZDY:AnimateOpacityParameter BeginTime=0, To=1, Duration=450, Ease={StaticResource ExpEase}, TransitionOn=Visibility}"                                     
                                            ZDY:Animate.Blur="{ZDY:AnimateBlurParameter From='20', To='0', BeginTime=300, Duration=350, TransitionOn=Visibility}"              
                                            ZDY:Animate.Visibility="{Binding Path=IsShowAnimate, Mode=TwoWay, Converter={ZDY:BoolToVisibilityConverter}}"/>

                        <TextBlock Text="Translate and Opacity on Visibility Changed" 
                                            ZDY:Animate.Opacity="{ZDY:AnimateOpacityParameter BeginTime=350, To=1, Duration=550, Ease={StaticResource ExpEase}, TransitionOn=Visibility}"                                     
                                            ZDY:Animate.Translate="{ZDY:AnimateTranslateParameter BeginTime=350, To='0,0', From='100,0', Duration=350, Ease={StaticResource ExpEase}, TransitionOn=Visibility}"                                     
                                            ZDY:Animate.Visibility="{Binding Path=IsShowAnimate, Mode=TwoWay, Converter={ZDY:BoolToVisibilityConverter}}"/>

                        <TextBlock Text="Scale and Opacity on Visibility Changed" 
                                            ZDY:Animate.Opacity="{ZDY:AnimateOpacityParameter BeginTime=400, To=1, Duration=650, Ease={StaticResource ExpEase}, TransitionOn=Visibility}"                                     
                                            ZDY:Animate.LayoutScale="{ZDY:AnimateScaleParameter BeginTime=400, To='1,1', From='0.1,0.1', Duration=350, Ease={StaticResource ExpEase}, TransitionOn=Visibility}"                                     
                                            ZDY:Animate.Visibility="{Binding Path=IsShowAnimate, Mode=TwoWay, Converter={ZDY:BoolToVisibilityConverter}}"/>
                    </UniformGrid>
                </DockPanel>
            </ZDY:TabItem>
            <ZDY:TabItem Header="Grid">
                <UniformGrid Margin="20">

                    <!-- Grid of 4 colors -->
                    <ZDY:Grid ColumnCount="2"
                            ColumnWidth="*"
                            Rows="*,*"
                            ChildMargin="2"
                            Margin="5">

                        <Rectangle Fill="Blue" />
                        <Rectangle Fill="Red" />
                        <Rectangle Fill="Green" />
                        <Rectangle Fill="Yellow" />

                    </ZDY:Grid>

                    <!-- Colspan Tests (default Orientation) -->
                    <ZDY:Grid ColumnCount="3"
                            ColumnWidth="*"
                            RowCount="2"
                            RowHeight="*"
                            ChildMargin="2"
                            Margin="5">

                        <Rectangle Fill="Blue"
                           Grid.ColumnSpan="2" />
                        <Rectangle Fill="Red" />
                        <Rectangle Fill="Yellow" />
                        <Rectangle Fill="Green"
                           Grid.ColumnSpan="2" />

                    </ZDY:Grid>

                    <!-- Colspan + Rowspan Tests (default Orientation) -->
                    <ZDY:Grid ColumnCount="3"
                            ColumnWidth="*"
                            RowCount="2"
                            RowHeight="*"
                            ChildMargin="2"
                            Margin="5">

                        <Rectangle Fill="Blue"
                           Grid.RowSpan="2" />
                        <Rectangle Fill="Red" />
                        <Rectangle Fill="Yellow" />
                        <Rectangle Fill="Green"
                           Grid.ColumnSpan="2" />

                    </ZDY:Grid>

                    <!-- Rowspan Tests, second child (default Orientation) -->
                    <ZDY:Grid ColumnCount="3"
                            ColumnWidth="*"
                            RowCount="2"
                            RowHeight="*"
                            ChildMargin="2"
                            Margin="5">

                        <Rectangle Fill="Blue" />
                        <Rectangle Fill="Red"
                           Grid.RowSpan="2" />
                        <Rectangle Fill="Yellow" />
                        <Rectangle Fill="Green" />
                        <Rectangle Fill="Orange" />

                    </ZDY:Grid>

                    <!-- Rowspan Tests, third child (default Orientation) -->
                    <ZDY:Grid ColumnCount="3"
                            ColumnWidth="*"
                            RowCount="2"
                            RowHeight="*"
                            ChildMargin="2"
                            Margin="5">

                        <Rectangle Fill="Blue" />
                        <Rectangle Fill="Red" />
                        <Rectangle Fill="Yellow"
                           Grid.RowSpan="2" />
                        <Rectangle Fill="Green" />
                        <Rectangle Fill="Orange" />

                    </ZDY:Grid>

                    <!-- Rowspan Tests, sufu (default Orientation) -->
                    <ZDY:Grid ColumnCount="3"
                            ColumnWidth="*"
                            RowCount="2"
                            RowHeight="*"
                            ChildMargin="2"
                            Margin="5">

                        <Rectangle Fill="Blue"
                           Grid.RowSpan="2" />
                        <Rectangle Fill="Red" />
                        <Rectangle Fill="Yellow"
                           Grid.RowSpan="2" />
                        <Rectangle Fill="Green" />

                    </ZDY:Grid>

                    <!-- Rowspan Tests, first column (default Orientation) -->
                    <ZDY:Grid ColumnCount="3"
                            ColumnWidth="*"
                            RowCount="2"
                            RowHeight="*"
                            ChildMargin="2"
                            Margin="5">

                        <Rectangle Fill="Blue" Grid.RowSpan="2" />
                        <Rectangle Fill="Red" />
                        <Rectangle Fill="Yellow" />
                        <Rectangle Fill="Green" />
                        <Rectangle Fill="Orange" />

                    </ZDY:Grid>


                    <!-- Colspan Tests, rowspan tests (Vertical Orientation) -->
                    <ZDY:Grid ColumnCount="3"
                            ColumnWidth="*"
                            RowCount="2"
                            RowHeight="*"
                            ChildMargin="2"
                            Orientation="Vertical"
                            Margin="5">

                        <Rectangle Fill="Blue"
                           Grid.RowSpan="2" />
                        <Rectangle Fill="Red" />
                        <Rectangle Fill="Yellow"
                           Grid.RowSpan="2" />
                        <Rectangle Fill="Green" />
                        <Rectangle Fill="Orange" />

                    </ZDY:Grid>

                    <!-- Colspan Tests, colspan tests (Vertical Orientation) -->
                    <ZDY:Grid ColumnCount="3"
                            ColumnWidth="*"
                            RowCount="2"
                            RowHeight="*"
                            ChildMargin="7"
                            Orientation="Vertical"
                            Margin="5">

                        <Rectangle Fill="Blue"
                           Grid.ColumnSpan="2" />
                        <Rectangle Fill="Red" />
                        <Rectangle Fill="Yellow"
                           Grid.RowSpan="2"
                           Margin="7"/>
                        <Rectangle Fill="Green" />
                        <Rectangle Fill="Orange" />

                    </ZDY:Grid>

                    <!-- Binding Test -->
                    <ZDY:Grid Rows="25*,75*"
                            Columns="*"
                            ChildMargin="5">
                        <ComboBox Name="uxCombo" SelectedIndex="0">
                            <ComboBoxItem Content="1"></ComboBoxItem>
                            <ComboBoxItem Content="2"></ComboBoxItem>
                            <ComboBoxItem Content="3"></ComboBoxItem>
                            <ComboBoxItem Content="4"></ComboBoxItem>
                        </ComboBox>
                        <ZDY:Grid ColumnCount="{Binding ElementName=uxCombo, Path=SelectedItem.Content}"
                            ColumnWidth="*"
                            RowHeight="*"
                            RowCount="4"
                            ChildMargin="1">

                            <Rectangle Fill="Blue" />
                            <Rectangle Fill="Red" />
                            <Rectangle Fill="Green" />
                            <Rectangle Fill="Yellow" />

                        </ZDY:Grid>
                    </ZDY:Grid>

                    <!-- Testing collapsed child row -->
                    <ZDY:Grid ColumnCount="2"
                            ColumnWidth="*"
                            Rows="*,*,*"
                            ChildMargin="2"
                            Margin="5">

                        <Rectangle Fill="Blue" />
                        <Rectangle Fill="Red" />
                        <Rectangle Fill="Green" Visibility="Collapsed" />
                        <Rectangle Fill="Yellow" Visibility="Collapsed" />
                        <Rectangle Fill="Purple" />
                        <Rectangle Fill="Pink" />

                    </ZDY:Grid>

                    <!-- Testing single collapsed child element -->
                    <ZDY:Grid ColumnCount="2"
                            ColumnWidth="*"
                            Rows="*,*,*"
                            ChildMargin="2"
                            Margin="5">

                        <Rectangle Fill="Blue" />
                        <Rectangle Fill="Red" />
                        <Rectangle Fill="Green" />
                        <Rectangle Fill="Yellow" Visibility="Collapsed" />
                        <Rectangle Fill="Purple" />
                        <Rectangle Fill="Pink" />

                    </ZDY:Grid>

                </UniformGrid>
            </ZDY:TabItem>
            <ZDY:TabItem Header="Calendar">
                <ZDY:ScrollViewer>
                    <StackPanel Margin="20">
                        <UniformGrid Rows="1">
                            <ZDY:Calendar x:Name="Calendar"/>
                            <ZDY:Calendar IsEnabled="False" SelectedDate="{Binding ElementName=Calendar, Path=SelectedDate, Mode=TwoWay}"/>
                        </UniformGrid>
                        <UniformGrid Rows="1" Margin="0 10 0 0">
                            <ZDY:Calendar ZDY:CalendarExtension.IsHeaderVisibled="False" SelectedDate="{Binding ElementName=Calendar, Path=SelectedDate, Mode=TwoWay}"/>
                            <ZDY:Calendar ZDY:CalendarExtension.IsHeaderVisibled="False" IsEnabled="False" SelectedDate="{Binding ElementName=Calendar, Path=SelectedDate, Mode=TwoWay}"/>
                        </UniformGrid>
                        <UniformGrid Rows="1" Margin="0 10 0 0">
                            <ZDY:Calendar ZDY:CalendarExtension.Orientation="Horizontal" Language="zh" SelectedDate="{Binding ElementName=Calendar, Path=SelectedDate, Mode=TwoWay}"/>
                            <ZDY:Calendar ZDY:CalendarExtension.Orientation="Horizontal" Language="zh" IsEnabled="False" SelectedDate="{Binding ElementName=Calendar, Path=SelectedDate, Mode=TwoWay}"/>
                        </UniformGrid>
                    </StackPanel>
                </ZDY:ScrollViewer>
            </ZDY:TabItem>
            <ZDY:TabItem Header="ColorPicker">
                <UniformGrid Columns="3" Rows="3" Margin="20">
                    <ZDY:ColorPicker x:Name="RGB" Kind="RGB" SelectedColor="{Binding ElementName=ColorPicker, Path=SelectedColor, Mode=TwoWay}" Margin="10"/>
                    <ZDY:ColorPicker x:Name="HSV" Kind="HSV" SelectedColor="{Binding ElementName=ColorPicker, Path=SelectedColor, Mode=TwoWay}" Margin="10"/>
                    <ZDY:ColorPicker x:Name="HSL" Kind="HSL" SelectedColor="{Binding ElementName=ColorPicker, Path=SelectedColor, Mode=TwoWay}" Margin="10"/>
                    <StackPanel>
                        <ZDY:ColorPicker x:Name="ColorPicker" Margin="10" IsColorPropertyNameVisibled="True" IsColorPropertyValueVisibled="True" SelectedColorChanged="ColorPicker_SelectedColorChanged"/>

                        <Border Width="50" Height="50" HorizontalAlignment="Center">
                            <Border.Background>
                                <SolidColorBrush Color="{Binding ElementName=ColorPicker, Path=SelectedColor}"/>
                            </Border.Background>
                        </Border>
                        <TextBlock Text="{Binding ElementName=ColorPicker, Path=SelectedColour}" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <ZDY:ColorPicker x:Name="HSV2" Kind="HSV2" SelectedColor="{Binding ElementName=ColorPicker, Path=SelectedColor, Mode=TwoWay}" Margin="10"/>
                    <ZDY:ColorPicker x:Name="HSL2" Kind="HSL2" SelectedColor="{Binding ElementName=ColorPicker, Path=SelectedColor, Mode=TwoWay}" Margin="10"/>
                    <StackPanel>
                        <ZDY:ColorPicker x:Name="ColorPickerNormal" IsAlphaEnabled="False" Margin="10"/>
                        <Border Width="50" Height="50" HorizontalAlignment="Center">
                            <Border.Background>
                                <SolidColorBrush Color="{Binding ElementName=ColorPickerNormal, Path=SelectedColor}"/>
                            </Border.Background>
                        </Border>
                        <TextBlock Text="{Binding ElementName=ColorPickerNormal, Path=SelectedColour}" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <Grid>
                        <ZDY:ColorWheeler Hue="{Binding ElementName=ColorPickerNormal, Path=HSV_H, Mode=TwoWay}"/>
                        <ZDY:ColorWheeler x:Name="ColorWheeler" SelectedColor="{Binding ElementName=ColorPickerNormal, Path=SelectedColor, Mode=TwoWay}" Margin="25"/>
                        <TextBlock Text="{Binding ElementName=ColorWheeler, Path=SelectedColour}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                    <StackPanel>
                        <ZDY:ColorEyeDropper x:Name="ColorEyeDropper"/>

                        <Border Width="50" Height="50" HorizontalAlignment="Center" Margin="0 10 0 0">
                            <Border.Background>
                                <SolidColorBrush Color="{Binding ElementName=ColorEyeDropper, Path=SelectedColor}"/>
                            </Border.Background>
                        </Border>
                        <TextBlock Text="{Binding ElementName=ColorEyeDropper, Path=SelectedColour}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </UniformGrid>
            </ZDY:TabItem>
            <ZDY:TabItem Header="Inputs">
                <StackPanel Margin="20">
                    <StackPanel.Resources>
                        <Style TargetType="{x:Type ZDY:TextBox}">
                            <Setter Property="Margin" Value="5"/>
                        </Style>
                        <Style TargetType="{x:Type ZDY:PasswordBox}">
                            <Setter Property="Margin" Value="5"/>
                        </Style>
                        <Style TargetType="{x:Type ZDY:ComboBox}">
                            <Setter Property="Margin" Value="5"/>
                        </Style>
                        <Style TargetType="{x:Type ZDY:DatePicker}">
                            <Setter Property="Margin" Value="5"/>
                        </Style>
                    </StackPanel.Resources>
                    <UniformGrid Rows="1">
                        <ZDY:TextBox/>
                        <ZDY:TextBox Text="with Placeholder" ZDY:TextBoxExtension.Placeholder="Enter text"/>
                        <ZDY:TextBox Text="Read-Only" IsReadOnly="True"/>
                        <ZDY:TextBox ZDY:TextBoxExtension.Placeholder="with CornerRadius" ZDY:TextBoxExtension.CornerRadius="3"/>
                    </UniformGrid>
                    <UniformGrid Rows="1">
                        <ZDY:TextBox BorderThickness="1"/>
                        <ZDY:TextBox BorderThickness="1" Text="with Placeholder" ZDY:TextBoxExtension.Placeholder="Enter text"/>
                        <ZDY:TextBox BorderThickness="1" Text="Read-Only" IsReadOnly="True"/>
                        <ZDY:TextBox BorderThickness="1" ZDY:TextBoxExtension.Placeholder="with CornerRadius" ZDY:TextBoxExtension.CornerRadius="3"/>
                    </UniformGrid>
                    <UniformGrid Rows="1">
                        <ZDY:TextBox ZDY:TextBoxExtension.Placeholder="with Validation">
                            <ZDY:TextBox.Text>
                                <Binding Path="ValidationStringValue" UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <ZDY:NullOrEmptyValidationRule/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </ZDY:TextBox.Text>
                        </ZDY:TextBox>
                        <ZDY:TextBox BorderThickness="1" ZDY:TextBoxExtension.Placeholder="with Validation">
                            <ZDY:TextBox.Text>
                                <Binding Path="ValidationStringValue" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <ZDY:NullOrEmptyValidationRule/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </ZDY:TextBox.Text>
                        </ZDY:TextBox>
                        <ZDY:TextBox ZDY:TextBoxExtension.Placeholder="with Validation"  ZDY:TextBoxExtension.CornerRadius="3">
                            <ZDY:TextBox.Text>
                                <Binding Path="ValidationStringValue" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <ZDY:NullOrEmptyValidationRule/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </ZDY:TextBox.Text>
                        </ZDY:TextBox>
                        <ZDY:TextBox BorderThickness="1" ZDY:TextBoxExtension.Placeholder="with Validation" ZDY:TextBoxExtension.CornerRadius="3">
                            <ZDY:TextBox.Text>
                                <Binding Path="ValidationStringValue" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <ZDY:NullOrEmptyValidationRule/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </ZDY:TextBox.Text>
                        </ZDY:TextBox>
                    </UniformGrid>
                    <UniformGrid Rows="1">
                        <ZDY:PasswordBox/>
                        <ZDY:PasswordBox Text="123456" ZDY:TextBoxExtension.Placeholder="Enter text"/>
                        <ZDY:PasswordBox Text="Read-Only" IsReadOnly="True"/>
                        <ZDY:PasswordBox ZDY:TextBoxExtension.Placeholder="with CornerRadius" ZDY:TextBoxExtension.CornerRadius="3"/>
                    </UniformGrid>
                    <UniformGrid Rows="1">
                        <ZDY:PasswordBox BorderThickness="1" PasswordChar="$"/>
                        <ZDY:PasswordBox BorderThickness="1" Text="123456" ZDY:TextBoxExtension.Placeholder="Enter text"/>
                        <ZDY:PasswordBox BorderThickness="1" Text="Read-Only" IsReadOnly="True"/>
                        <ZDY:PasswordBox BorderThickness="1" ZDY:TextBoxExtension.Placeholder="with CornerRadius" ZDY:TextBoxExtension.CornerRadius="3"/>
                    </UniformGrid>
                    <UniformGrid Rows="1">
                        <ZDY:PasswordBox ZDY:TextBoxExtension.Placeholder="with Validation">
                            <ZDY:PasswordBox.Text>
                                <Binding Path="ValidationStringValue" UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <ZDY:NullOrEmptyValidationRule/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </ZDY:PasswordBox.Text>
                        </ZDY:PasswordBox>
                        <ZDY:PasswordBox BorderThickness="1" ZDY:TextBoxExtension.Placeholder="with Validation">
                            <ZDY:PasswordBox.Text>
                                <Binding Path="ValidationStringValue" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <ZDY:NullOrEmptyValidationRule/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </ZDY:PasswordBox.Text>
                        </ZDY:PasswordBox>
                        <ZDY:PasswordBox ZDY:TextBoxExtension.Placeholder="with Validation"  ZDY:TextBoxExtension.CornerRadius="3">
                            <ZDY:PasswordBox.Text>
                                <Binding Path="ValidationStringValue" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <ZDY:NullOrEmptyValidationRule/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </ZDY:PasswordBox.Text>
                        </ZDY:PasswordBox>
                        <ZDY:PasswordBox BorderThickness="1" ZDY:TextBoxExtension.Placeholder="with Validation" ZDY:TextBoxExtension.CornerRadius="3">
                            <ZDY:PasswordBox.Text>
                                <Binding Path="ValidationStringValue" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <ZDY:NullOrEmptyValidationRule/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </ZDY:PasswordBox.Text>
                        </ZDY:PasswordBox>
                    </UniformGrid>
                    <UniformGrid Rows="1">
                        <ZDY:ComboBox >
                            <ComboBoxItem Content="Default Combo Box"/>
                            <ComboBoxItem Content="Lorem Ipsum"/>
                            <ComboBoxItem Content="Dolor sit amet"/>
                        </ZDY:ComboBox>
                        <ZDY:ComboBox Text="Editable Combo Box"
                                      IsEditable="True"
                                      ZDY:TextBoxExtension.Placeholder="Select an option">
                            <ZDY:ComboBox.Items>
                                <ComboBoxItem Content="Item 1"/>
                                <ComboBoxItem Content="Item 2"/>
                                <ComboBoxItem Content="Item 3"/>
                            </ZDY:ComboBox.Items>
                        </ZDY:ComboBox>
                        <ZDY:ComboBox Text="Read-Only Editable Combo Box"
                                      IsEditable="True"
                                      IsReadOnly="True"
                                      ZDY:TextBoxExtension.Placeholder="Select an option">
                            <ZDY:ComboBox.Items>
                                <ComboBoxItem Content="Item 1"/>
                                <ComboBoxItem Content="Item 2"/>
                                <ComboBoxItem Content="Item 3"/>
                            </ZDY:ComboBox.Items>
                        </ZDY:ComboBox>
                        <ZDY:ComboBox IsEditable="True" ZDY:TextBoxExtension.CornerRadius="3"
                                      ZDY:TextBoxExtension.Placeholder="Combo Box with watermark">
                            <ZDY:ComboBox.Items>
                                <ComboBoxItem Content="Item 1"/>
                                <ComboBoxItem Content="Item 2"/>
                                <ComboBoxItem Content="Item 3"/>
                            </ZDY:ComboBox.Items>
                        </ZDY:ComboBox>
                    </UniformGrid>
                    <UniformGrid Rows="1">
                        <ZDY:ComboBox BorderThickness="1">
                            <ComboBoxItem Content="Default Combo Box"/>
                            <ComboBoxItem Content="Lorem Ipsum"/>
                            <ComboBoxItem Content="Dolor sit amet"/>
                        </ZDY:ComboBox>
                        <ZDY:ComboBox BorderThickness="1"
                                      Text="Editable Combo Box"
                                      IsEditable="True"
                                      ZDY:TextBoxExtension.Placeholder="Select an option">
                            <ZDY:ComboBox.Items>
                                <ComboBoxItem Content="Item 1"/>
                                <ComboBoxItem Content="Item 2"/>
                                <ComboBoxItem Content="Item 3"/>
                            </ZDY:ComboBox.Items>
                        </ZDY:ComboBox>
                        <ZDY:ComboBox BorderThickness="1"
                                      Text="Read-Only Editable Combo Box"
                                      IsEditable="True"
                                      IsReadOnly="True"
                                      ZDY:TextBoxExtension.Placeholder="Select an option">
                            <ZDY:ComboBox.Items>
                                <ComboBoxItem Content="Item 1"/>
