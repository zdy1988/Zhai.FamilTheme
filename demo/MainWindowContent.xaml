                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Top:"/>
                                <ZDY:SwitchToggleButton x:Name="TopDrawerSwitch" IsChecked="{Binding RelativeSource={RelativeSource AncestorType=ZDY:Drawer}, Path=IsTopDrawerOpen}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Bottom:"/>
                                <ZDY:SwitchToggleButton x:Name="BottomDrawerSwitch" IsChecked="{Binding RelativeSource={RelativeSource AncestorType=ZDY:Drawer}, Path=IsBottomDrawerOpen}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="IsOverlayed:"/>
                                <ZDY:SwitchToggleButton IsChecked="{Binding RelativeSource={RelativeSource AncestorType=ZDY:Drawer}, Path=IsOverlayed}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="IsOverlayBackgroundEnabled:"/>
                                <ZDY:SwitchToggleButton IsChecked="{Binding RelativeSource={RelativeSource AncestorType=ZDY:Drawer}, Path=IsOverlayBackgroundEnabled}"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                    <ZDY:Drawer.LeftDrawerContent>
                        <Border Width="100" Background="#70666666">
                            <ZDY:IconToggleButton IsChecked="{Binding Source={x:Reference LeftDrawerSwitch}, Path=IsChecked}" Icon="Close" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ZDY:Drawer.LeftDrawerContent>
                    <ZDY:Drawer.RightDrawerContent>
                        <Border Width="100" Background="#70666666">
                            <ZDY:IconToggleButton IsChecked="{Binding Source={x:Reference RightDrawerSwitch}, Path=IsChecked}" Icon="Close" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ZDY:Drawer.RightDrawerContent>
                    <ZDY:Drawer.TopDrawerContent>
                        <Border Height="100" Background="#70666666">
                            <ZDY:IconToggleButton IsChecked="{Binding Source={x:Reference TopDrawerSwitch}, Path=IsChecked}" Icon="Close" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ZDY:Drawer.TopDrawerContent>
                    <ZDY:Drawer.BottomDrawerContent>
                        <Border Height="100" Background="#70666666">
                            <ZDY:IconToggleButton IsChecked="{Binding Source={x:Reference BottomDrawerSwitch}, Path=IsChecked}" Icon="Close" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ZDY:Drawer.BottomDrawerContent>
                </ZDY:Drawer>
            </ZDY:TabItem>
            <ZDY:TabItem Header="Slider">
                <StackPanel Margin="20">
                    <TextBlock Text="{Binding ElementName=Slider1, Path=Value, StringFormat=Slider:{0}}" Margin="0 10 0 0"/>
                    <ZDY:Slider Margin="0 5" x:Name="Slider1" Value="5"/>
                    <ZDY:Slider Margin="0 5" IsEnabled="False" Value="7"/>
                    <ZDY:Slider Margin="0 5" Value="7" Foreground="{StaticResource Zhai.FamilTheme.ColorfulBrush}"/>
                    <ZDY:Slider Margin="0 5" IsEnabled="False" Value="7" Foreground="{StaticResource Zhai.FamilTheme.ColorfulBrush}"/>
                    <ZDY:Slider Margin="0 5" Value="7" Foreground="{StaticResource Zhai.FamilTheme.ColorfulBrush}" Background="Red" CornerRadius="2"/>
                    <TextBlock Text="{Binding ElementName=Slider2, Path=Value, StringFormat=Slider2:{0}}" Margin="0 10 0 0"/>
                    <ZDY:Slider2 Margin="0 5" x:Name="Slider2" Value="5"/>
                    <ZDY:Slider2 Margin="0 5" IsEnabled="False" Value="7"/>
                    <ZDY:Slider2 Margin="0 5" Value="7" Foreground="{StaticResource Zhai.FamilTheme.ColorfulBrush}"/>
                    <ZDY:Slider2 Margin="0 5" IsEnabled="False" Value="7" Foreground="{StaticResource Zhai.FamilTheme.ColorfulBrush}"/>
                    <ZDY:Slider2 Margin="0 5" Value="7" Foreground="{StaticResource Zhai.FamilTheme.ColorfulBrush}" Background="Red" CornerRadius="2"/>
                </StackPanel>
            </ZDY:TabItem>
            <ZDY:TabItem Header="CheckBox">
                <StackPanel Margin="20 0">
                    <WrapPanel>
                        <ZDY:CheckBox Margin="5"/>
                        <ZDY:CheckBox Margin="5" IsChecked="{x:Null}"/>
                        <ZDY:CheckBox Margin="5" Size="32"/>
                        <ZDY:CheckBox Margin="5" Size="64"/>
                        <ZDY:CheckBox Margin="5" Foreground="{StaticResource Zhai.FamilTheme.ColorfulBrush}" Background="Red" CornerRadius="3"/>
                    </WrapPanel>

                    <WrapPanel>
                        <ZDY:RadioButton Margin="5" GroupName="radio"/>
                        <ZDY:RadioButton Margin="5" GroupName="radio" Size="32"/>
                        <ZDY:RadioButton Margin="5" GroupName="radio" Size="64"/>
                        <ZDY:RadioButton Margin="5" GroupName="radio" Foreground="{StaticResource Zhai.FamilTheme.ColorfulBrush}" Background="Red"/>
                    </WrapPanel>

                    <WrapPanel>
                        <ZDY:SwitchToggleButton Margin="5"/>
                        <ZDY:SwitchToggleButton Margin="5" Foreground="{StaticResource Zhai.FamilTheme.ColorfulBrush}" Background="Red"/>
                        <ZDY:SwitchToggleButton Margin="5" Size="45"/>
                        <ZDY:SwitchToggleButton Margin="5" Size="60"/>
                    </WrapPanel>

                    <WrapPanel>
                        <ZDY:SwitchToggleButton Margin="5" Size="45">
                            <ZDY:Icon Kind="Sun" Foreground="Red"/>
                        </ZDY:SwitchToggleButton>
                        <ZDY:SwitchToggleButton Margin="5" Size="45">
                            <Grid>
                                <ZDY:Icon x:Name="CheckedIcon" Kind="Sun" Foreground="DarkGoldenrod" Visibility="{Binding RelativeSource={RelativeSource AncestorType=ZDY:SwitchToggleButton}, Path=IsChecked, Converter={ZDY:BoolToVisibilityConverter}}"/>
                                <ZDY:Icon x:Name="UnCheckedIcon" Kind="Moon" Foreground="LightBlue" Visibility="{Binding RelativeSource={RelativeSource AncestorType=ZDY:SwitchToggleButton}, Path=IsChecked, Converter={ZDY:BoolToInverseVisibilityConverter}}"/>
                            </Grid>
                        </ZDY:SwitchToggleButton>
                    </WrapPanel>
                </StackPanel>
            </ZDY:TabItem>
            <ZDY:TabItem Header="Icons">
                <ZDY:ScrollViewer Margin="17 0 0 0">
                    <ZDY:Repeater x:Name="IconList" ItemsSource="{Binding IconKinds}"
                                  Orientation="HorizontalWithWarp" HorizontalAlignment="Center" Margin="0 0 0 40">
                        <ZDY:Repeater.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Width="50" Margin="5" Background="Transparent" ToolTip="{Binding }">
                                    <Border x:Name="Border" Width="50" Height="50" BorderThickness="1">
                                        <ZDY:CopyButton Icon="{Binding }" Text="{Binding }" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="{Binding }" TextAlignment="Center" Margin="0 4 0 0" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"/>
                                </StackPanel>

                                <DataTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#3003a9f4"/>
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#4395ff"/>
                                    </Trigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ZDY:Repeater.ItemTemplate>
                    </ZDY:Repeater>
                </ZDY:ScrollViewer>
            </ZDY:TabItem>
            <ZDY:TabItem Header="ProgressBar">
                <StackPanel>
                    <StackPanel.Resources>
                        <Style TargetType="{x:Type ZDY:ProgressBar}">
                            <Setter Property="Margin" Value="10"/>
                        </Style>
                    </StackPanel.Resources>
                    <WrapPanel Orientation="Horizontal">
                        <ZDY:ProgressBar Width="240" Height="24" Minimum="0" Maximum="100" Value="25" Content="Progress bar with content"/>
                        <ZDY:ProgressBar Width="240" Height="24" IsIndeterminate="True" Content="Progress bar with content"/>
                    </WrapPanel>
                    <WrapPanel Orientation="Horizontal">
                        <ZDY:ProgressBar Width="240" BorderThickness="1" Height="24" Minimum="0" Maximum="100" Value="25" Content="Progress bar with content"/>
                        <ZDY:ProgressBar Width="240" BorderThickness="1" Height="24" IsIndeterminate="True" Content="Progress bar with content"/>
                    </WrapPanel>
                    <WrapPanel Orientation="Horizontal">
                        <ZDY:ProgressBar Width="240" BorderThickness="2" BorderBrush="LightPink" Height="24" Minimum="0" Maximum="100" Value="25" Content="Progress bar with content"/>
                        <ZDY:ProgressBar Width="240" BorderThickness="2" BorderBrush="LightPink" Height="24" IsIndeterminate="True" Content="Progress bar with content"/>
                    </WrapPanel>
                    <WrapPanel Orientation="Horizontal" >
                        <ZDY:ProgressBar Width="240" Height="16" Minimum="0"  Maximum="100"  Value="50" />
                        <ZDY:ProgressBar Width="240" Height="16" IsIndeterminate="True"/>
                    </WrapPanel>
                    <WrapPanel Orientation="Horizontal">
                        <ZDY:ProgressBar Width="240" Height="4" Minimum="0" Maximum="100" Value="100" BorderThickness="0" CornerRadius="2"/>
                        <ZDY:ProgressBar Width="240" Height="4" IsIndeterminate="True" BorderThickness="0" CornerRadius="2"/>
                    </WrapPanel>
                    <WrapPanel Orientation="Horizontal">
                        <ZDY:ProgressBar Width="240" Height="24" Minimum="0"  Maximum="100" Value="66" BorderThickness="0"
                                         Progressground="{StaticResource Zhai.FamilTheme.ColorfulBrush}" 
                                         Background="Gray" CornerRadius="2"
                                         Content="Progress bar with content"
                                         Foreground="White"
                                         ProgressAnimationForeground="Red"
                                         IsProgressAnimationEnabled="True">
                        </ZDY:ProgressBar>
                        <ZDY:ProgressBar Width="240" Height="24" IsIndeterminate="True" BorderThickness="0"
                                         Progressground="{StaticResource Zhai.FamilTheme.ColorfulBrush}"
                                         Background="Gray" CornerRadius="2"
                                         Content="Progress bar with content"
                                         Foreground="White"
                                         ProgressAnimationForeground="Red"
                                         IsProgressAnimationEnabled="False">
                        </ZDY:ProgressBar>
                    </WrapPanel>
                </StackPanel>
            </ZDY:TabItem>
            <ZDY:TabItem Header="Loading">
                <StackPanel Margin="20" HorizontalAlignment="Left">
                    <ZDY:Loading/>
                    <ZDY:Loading Theme="Bars"/>
                    <ZDY:Loading Theme="Dots"/>
                    <ZDY:Loading Foreground="OrangeRed"/>
                    <ZDY:Loading Theme="Bars" Foreground="OrangeRed"/>
                    <ZDY:Loading Theme="Dots" Foreground="OrangeRed"/>
                    <ZDY:Loading Width="100" Foreground="{StaticResource Zhai.FamilTheme.ColorfulBrush}"/>
                </StackPanel>
            </ZDY:TabItem>
            <ZDY:TabItem Header="ScrollViewer">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <ZDY:ScrollViewer Grid.Column="0" HorizontalScrollBarVisibility="Visible" Margin="20"
                                      ZDY:ScrollViewerExtension.IsInertiaEnabled="{Binding ElementName=ScrollViewer_IsInertiaEnabled, Path=IsChecked}"
                                      ZDY:ScrollViewerExtension.IsMouseWheelEnabled="{Binding ElementName=ScrollViewer_IsMouseWheelEnabled, Path=IsChecked}"
                                      ZDY:ScrollViewerExtension.MouseWheelOrientation="{Binding ElementName=ScrollViewer_MouseWheelOrientation, Path=IsChecked, Converter={ZDY:BoolToOrientationConverter}}"
                                      ZDY:ScrollViewerExtension.IsAutoHideEnabled="{Binding ElementName=ScrollViewer_IsAutoHideEnabled, Path=IsChecked}"
                                      ZDY:ScrollViewerExtension.IsOverlayed="{Binding ElementName=ScrollViewer_IsOverlayed, Path=IsChecked}">
                        <Border Width="1000" Height="1000">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#A770EF"  Offset="0"/>
                                    <GradientStop Color="#CF8BF3"  Offset=".5"/>
                                    <GradientStop Color="#FDB99B"  Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </ZDY:ScrollViewer>
                    <ZDY:ScrollViewer Grid.Column="1" HorizontalScrollBarVisibility="Visible" Margin="20"
                                      ZDY:ScrollViewerExtension.IsInertiaEnabled="{Binding ElementName=ScrollViewer_IsInertiaEnabled, Path=IsChecked}"
                                      ZDY:ScrollViewerExtension.IsMouseWheelEnabled="{Binding ElementName=ScrollViewer_IsMouseWheelEnabled, Path=IsChecked}"
                                      ZDY:ScrollViewerExtension.MouseWheelOrientation="{Binding ElementName=ScrollViewer_MouseWheelOrientation, Path=IsChecked, Converter={ZDY:BoolToOrientationConverter}}"
                                      ZDY:ScrollViewerExtension.IsAutoHideEnabled="{Binding ElementName=ScrollViewer_IsAutoHideEnabled, Path=IsChecked}"
                                      ZDY:ScrollViewerExtension.IsOverlayed="True">
                        <Border Width="1000" Height="1000">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#A770EF"  Offset="0"/>
                                    <GradientStop Color="#CF8BF3"  Offset=".5"/>
                                    <GradientStop Color="#FDB99B"  Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </ZDY:ScrollViewer>
                    <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="20" HorizontalAlignment="Center">
                        <ZDY:CheckBox x:Name="ScrollViewer_IsInertiaEnabled" Margin="0 0 4 0"/>
                        <TextBlock Text="允许惯性" Margin="0 0 10 0"/>
                        <ZDY:CheckBox x:Name="ScrollViewer_IsMouseWheelEnabled" Margin="0 0 4 0" IsChecked="True"/>
                        <TextBlock Text="允许鼠标滚动" Margin="0 0 10 0"/>
                        <ZDY:CheckBox x:Name="ScrollViewer_MouseWheelOrientation" Margin="0 0 4 0" IsChecked="True"/>
                        <TextBlock Text="鼠标垂直方向" Margin="0 0 10 0"/>
                        <ZDY:CheckBox x:Name="ScrollViewer_IsAutoHideEnabled" Margin="0 0 4 0" IsChecked="True"/>
                        <TextBlock Text="自动隐藏" Margin="0 0 10 0"/>
                        <ZDY:CheckBox x:Name="ScrollViewer_IsOverlayed" Margin="0 0 4 0"/>
                        <TextBlock Text="是否覆盖" Margin="0 0 10 0"/>
                    </StackPanel>
                </Grid>
            </ZDY:TabItem>
            <TabItem Header="Window">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="20" VerticalAlignment="Top" HorizontalAlignment="Center">
                        <ZDY:CheckBox Margin="0 0 4 0" IsChecked="{Binding RelativeSource={RelativeSource AncestorType=ZDY:WindowBase}, Path=IsTransparencyButtonEnabled}"/>
                        <TextBlock Text="启用透明按钮" Margin="0 0 10 0"/>
                        <ZDY:CheckBox Margin="0 0 4 0" IsChecked="{Binding RelativeSource={RelativeSource AncestorType=ZDY:WindowBase}, Path=IsTopmostButtonEnabled}"/>
                        <TextBlock Text="启用置顶按钮" Margin="0 0 10 0"/>
                        <ZDY:CheckBox Margin="0 0 4 0" IsChecked="{Binding RelativeSource={RelativeSource AncestorType=ZDY:WindowBase}, Path=IsThemeButtonEnabled}"/>
                        <TextBlock Text="启用皮肤按钮" Margin="0 0 10 0"/>
                        <ZDY:CheckBox Margin="0 0 4 0" IsChecked="{Binding RelativeSource={RelativeSource AncestorType=ZDY:WindowBase}, Path=IsCaptionButtonsEnabled}"/>
                        <TextBlock Text="启用头部按钮" Margin="0 0 10 0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="20" VerticalAlignment="Top" HorizontalAlignment="Center">
                        <ZDY:CheckBox Margin="0 0 4 0" IsChecked="{Binding RelativeSource={RelativeSource AncestorType=ZDY:WindowBase}, Path=IsTransparency}"/>
                        <TextBlock Text="是否透明" Margin="0 0 10 0"/>
                        <ZDY:CheckBox Margin="0 0 4 0" IsChecked="{Binding RelativeSource={RelativeSource AncestorType=ZDY:WindowBase}, Path=IsTitleBarBackgroundEnabled}"/>
                        <TextBlock Text="是否显示头部背景" Margin="0 0 10 0"/>
                        <ZDY:CheckBox Margin="0 0 4 0" IsChecked="{Binding RelativeSource={RelativeSource AncestorType=ZDY:WindowBase}, Path=TitleBarVisibility, Converter={ZDY:VisibilityToBoolConverter}}"/>
                        <TextBlock Text="是否启用头部" Margin="0 0 10 0"/>
                    </StackPanel>
                    <StackPanel Margin="20" VerticalAlignment="Top" HorizontalAlignment="Center">
                        <TextBlock Text="窗口透明度设置"/>
                        <ZDY:Slider x:Name="TransparencySlider" Width="200" Maximum="1" Minimum="0.1" SmallChange="0.01" Value="{Binding RelativeSource={RelativeSource AncestorType=ZDY:WindowBase}, Path=Transparency}"/>
                        <TextBlock Text="{Binding ElementName=TransparencySlider, Path=Value, StringFormat=N2}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="20" VerticalAlignment="Top" HorizontalAlignment="Center">
                        <ZDY:Button x:Name="NativeWindow_Button" Content="NativeWindow" Click="NativeWindow_Button_Click"/>
                        <ZDY:Button x:Name="GlassesWindow_Button" Content="GlassesWindow" Click="GlassesWindow_Button_Click"/>
                        <ZDY:Button x:Name="TransparentWindow_Button" Content="TransparentWindow" Click="TransparentWindow_Button_Click"/>
                    </StackPanel>
                </StackPanel>
            </TabItem>
        </ZDY:TabPanel>
    </Grid>
</UserControl>
